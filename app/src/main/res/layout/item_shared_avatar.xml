<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="dto"
            type="com.imrkjoseph.cybillteckexam.app.shared.dto.AvatarItemViewDto" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MatchWrapContent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_image"
            android:layout_width="@dimen/person_avatar_width"
            android:layout_height="@dimen/person_avatar_height"
            android:layout_margin="@dimen/distance_16x"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:loadUrl="@{dto.avatarUrl}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>